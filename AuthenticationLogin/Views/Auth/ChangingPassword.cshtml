@model string

@{
    ViewBag.Title = "Change Password";
}

<div class="login-container">
    <h2 class="text-center">Reset your password</h2>

    @if (Model != null)
    {
        <div class="alert alert-success text-center" role="alert">
            @Model
        </div>
    }

    <form method="post" action="@Url.Action("ChangingPassword", "Auth")">
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" name="email" required>
        </div>
        <div class="form-group">
            <label for="newPassword">New Password</label>
            <input type="password" class="form-control" id="newPassword" name="newPassword" required>
        </div>
        <div class="form-group">
            <label for="confirmPassword">Confirm Password</label>
            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
        </div>
        <button type="submit" class="btn btn-login btn-block">Reset password</button>
    </form>
    <form action="@Url.Action("Back","Auth")">
        <button type="submit" class="btn btn-login btn-block" style="margin-top: 15px">Back</button>
    </form>
</div>